@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<div id="viewport">
</div>
<script>
    stage = new RenderJs.Canvas.Stage({
        container: "viewport",
        width: 1200,
        height: 800
    });
    var layer = stage.createLayer();

    for (var i = 0; i < 1000; i++) {
        var image = new RenderJs.Canvas.Shapes.Image("Images/test.png", (Math.random() * 1000) + 15, (Math.random() * 800) + 40, 100, 100);
        layer.addShape(image);
        image.direction = 1;
        (function (img) {
            anim = new RenderJs.Canvas.Animation(function (frame) {
                //var v = Point(r * (Math.sin(Utils.convertToRad(img.aangle))) + ox, r * (Math.cos(Utils.convertToRad(img.aangle))) + oy);
                if (img.x() < 0 || img.x() > 1200)
                    img.direction *= -1;
                var x = img.direction * (1200 / (10000 / frame));
                img.moveShape(x, 0);
            }, layer);

            anim.start();
        }(image));
    }
</script>